<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionBourse.Pages.PageChoix"
             Title="PageChoix">
    <VerticalStackLayout Spacing="20" VerticalOptions="Center">
        <Button x:Name="btnAcheter" Text="Acheter une action"
            BackgroundColor="LawnGreen"
            Clicked="btnAcheter_Clicked"/>
        <Button x:Name="btnVendre" Text="Vendre une action"
            BackgroundColor="LightSeaGreen"
            Clicked="btnVendre_Clicked"/>
    </VerticalStackLayout>
</ContentPage>